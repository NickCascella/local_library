extends layout

block content
  h1 #{title}: #{book.title}
  p= book.summary
  p Due back: #{book_instance.due_back}
     
  p Do you really want to delete this Instance?

  form(method='POST' action='')
    div.form-group
    input#book_instanceid.form-control(type='hidden',name='book_instanceid', required='true', value=book_instance._id)
    button.btn.btn-primary(type='submit') Delete

